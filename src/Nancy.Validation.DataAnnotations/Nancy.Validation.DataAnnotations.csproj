<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Adds Data Annotation validation support to Nancy.</Description>
    <VersionPrefix>2.0.0-clinteastwood</VersionPrefix>
    <Authors>Andreas Håkansson, Steven Robbins and contributors</Authors>
    <TargetFramework>net452</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Nancy.Validation.DataAnnotations</AssemblyName>
    <PackageId>Nancy.Validation.DataAnnotations</PackageId>
    <PackageTags>Nancy;Validation;DataAnnotations</PackageTags>
    <PackageIconUrl>http://nancyfx.org/nancy-nuget.png</PackageIconUrl>
    <PackageProjectUrl>http://nancyfx.org</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/NancyFx/Nancy/blob/master/license.txt</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../Nancy/Nancy.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AsyncUsageAnalyzers" Version="1.0.0-alpha003">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net452' ">
    <Reference Include="System.ComponentModel.DataAnnotations" />
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

</Project>
